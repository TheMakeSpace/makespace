                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  Gallery
                  %b.caret
                %ul.dropdown-menu{role: "menu"}
                  %li
                    %a{href: "works.html"} Simple gallery
                  %li
                    %a{href: "works2.html"} With text
                  %li
                    %a{href: "works3.html"} With filter
