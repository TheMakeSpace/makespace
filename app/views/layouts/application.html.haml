            = image_tag "header-logo.png"
          .nav-collapse.pull-right
            %ul.nav
              %li.active
                %a{href: "index.html"} Home
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  Pages
                  %b.caret
                %ul.dropdown-menu{role: "menu"}
                  %li
                    %a{href: "about.html"} About Us
                  %li
                    %a{href: "services.html"} Services
                  %li
                    %a{href: "price.html"} Price
                  %li
                    %a{href: "login.html"} Login
                  %li
                    %a{href: "register.html"} Register
                  %li
                    %a{href: "faq.html"} F.A.Q.
                  %li
                    %a{href: "contacts.html"} Contact
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  Blog
                  %b.caret
                %ul.dropdown-menu{role: "menu"}
                  %li
                    %a{href: "blog-right.html"} Blog right sidebar
                  %li
                    %a{href: "blog-left.html"} Blog left sidebar
